{
  "name": "ec-europa/ne-platform-scaffold",
  "description": "Scaffolding Composer Plugin for the NextEuropa Platform",
  "type": "composer-plugin",
  "license": "EUPL-1.1",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=5.6",
    "composer-plugin-api": "^1.0",
    "symfony/finder": "^3.4"
  },
  "require-dev": {
    "composer/composer": "dev-master",
    "squizlabs/php_codesniffer": "^3.2",
    "sensiolabs/security-checker": "^4.1",
    "friendsofphp/php-cs-fixer": "^2.9",
    "phpro/grumphp": "^0.12.1"
  },
  "extra": {
    "class": "NextEuropa\\PlatformScaffold\\Plugin"
  },
  "autoload": {
    "psr-4": {
      "NextEuropa\\PlatformScaffold\\": "./src"
    }
  },
  "scripts": {
    "grumphp": "./vendor/bin/grumphp run"
  }
}
